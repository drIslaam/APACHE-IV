<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">
        
        <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="16dp"
    android:background="?attr/colorPrimarySurface">

    <ImageView
        android:id="@+id/profileImage"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:contentDescription="Profile picture"
        android:src="@drawable/ic_default_avatar" />

    <TextView
        android:id="@+id/profileName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_gravity="center_vertical"
        android:textSize="18sp"
        android:textColor="@android:color/white"/>

</LinearLayout>

<!-- Your existing layout content goes below -->

        <!-- Patient Type -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Patient Type"
            android:textStyle="bold"
            android:layout_marginTop="8dp"/>

        <Spinner
            android:id="@+id/spinnerPatientType"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <!-- Basic Information -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Basic Information"
            android:textStyle="bold"
            android:layout_marginTop="16dp"/>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Age (years)">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etAge"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal"/>
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Vital Signs -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Vital Signs (worst in first 24h)"
            android:textStyle="bold"
            android:layout_marginTop="16dp"/>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Temperature (°C)">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etTemperature"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal"
                android:text="37.0"/>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="MAP (mmHg)">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etMap"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal"
                android:text="70.0"/>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Heart Rate (/min)">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etHeartRate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal"
                android:text="80.0"/>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Respiratory Rate (/min)">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etRespiratoryRate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal"
                android:text="15.0"/>
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Respiratory -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Respiratory"
            android:textStyle="bold"
            android:layout_marginTop="16dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Mechanical Ventilation"/>

        <RadioGroup
            android:id="@+id/rgVentilation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/rbVentilatedNo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="No"
                android:checked="true"/>

            <RadioButton
                android:id="@+id/rbVentilatedYes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Yes"/>
        </RadioGroup>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="FiO2 (%)">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etFio2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal"
                android:text="21.0"/>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="pO2 (mmHg)">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etPo2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal"
                android:text="90.0"/>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="pCO2 (mmHg)">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etPco2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal"
                android:text="40.0"/>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Arterial pH">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etPh"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal"
                android:text="7.4"/>
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Labs -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Laboratory Values"
            android:textStyle="bold"
            android:layout_marginTop="16dp"/>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Na+ (mEq/L)">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etSodium"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal"
                android:text="140.0"/>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Urine Output (mL/24h)">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etUrineOutput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal"
                android:text="1000.0"/>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Creatinine (µmol/L)">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etCreatinine"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal"
                android:text="1.0"/>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Urea (mEq/L)">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etUrea"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal"
                android:text="4.0"/>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Blood Sugar (mg/dL)">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etBloodSugar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal"
                android:text="100.0"/>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Albumin (g/L)">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etAlbumin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal"
                android:text="40.0"/>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Bilirubin (µmol/L)">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etBilirubin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal"
                android:text="10.0"/>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Hematocrit (%)">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etHematocrit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal"
                android:text="40.0"/>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="WBC (x1000/mm3)">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etWbc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal"
                android:text="10.0"/>
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Neurological -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Neurological"
            android:textStyle="bold"
            android:layout_marginTop="16dp"/>

        <CheckBox
            android:id="@+id/cbSedated"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sedated/Paralyzed (GCS not available)"/>

        <LinearLayout
            android:id="@+id/layoutGcs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="visible">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Glasgow Coma Scale"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Eyes"/>

            <Spinner
                android:id="@+id/spinnerGcsEyes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Verbal"
                android:layout_marginTop="8dp"/>

            <Spinner
                android:id="@+id/spinnerGcsVerbal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Motor"
                android:layout_marginTop="8dp"/>

            <Spinner
                android:id="@+id/spinnerGcsMotor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <!-- Chronic Health Conditions -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Chronic Health Conditions"
            android:textStyle="bold"
            android:layout_marginTop="16dp"/>

        <CheckBox
            android:id="@+id/cbCrf"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="CRF / HD"/>

        <CheckBox
            android:id="@+id/cbCirrhosis"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cirrhosis"/>

        <CheckBox
            android:id="@+id/cbHepaticFailure"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Hepatic Failure"/>

        <CheckBox
            android:id="@+id/cbMetastaticCarcinoma"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Metastatic Carcinoma"/>

        <CheckBox
            android:id="@+id/cbLymphoma"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Lymphoma"/>

        <CheckBox
            android:id="@+id/cbLeukemia"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Leukemia/Myeloma"/>

        <CheckBox
            android:id="@+id/cbImmunosuppression"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Immunosuppression"/>

        <CheckBox
            android:id="@+id/cbAids"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="AIDS"/>

        <!-- Admission Information -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Admission Information"
            android:textStyle="bold"
            android:layout_marginTop="16dp"/>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Pre-ICU LOS (days)">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etPreIcuLos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal"
                android:text="0.0"/>
        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Origin"/>

        <Spinner
            android:id="@+id/spinnerAdmissionOrigin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Readmission"
            android:layout_marginTop="8dp"/>

        <RadioGroup
            android:id="@+id/rgReadmission"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/rbReadmissionNo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="No"
                android:checked="true"/>

            <RadioButton
                android:id="@+id/rbReadmissionYes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Yes"/>
        </RadioGroup>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Emergency Surgery"
            android:layout_marginTop="8dp"/>

        <RadioGroup
            android:id="@+id/rgEmergencySurgery"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/rbEmergencySurgeryNo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="No"
                android:checked="true"/>

            <RadioButton
                android:id="@+id/rbEmergencySurgeryYes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Yes"/>
        </RadioGroup>

        <!-- Diagnosis -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Diagnosis"
            android:textStyle="bold"
            android:layout_marginTop="16dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="System"/>

        <Spinner
            android:id="@+id/spinnerSystem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Diagnosis"
            android:layout_marginTop="8dp"/>

        <Spinner
            android:id="@+id/spinnerDiagnosis"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <LinearLayout
            android:id="@+id/layoutThrombolysis"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="gone"
            android:layout_marginTop="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Thrombolysis:"
                android:layout_marginEnd="8dp"/>

            <RadioGroup
                android:id="@+id/rgThrombolysis"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/rbThrombolysisNo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="No"
                    android:checked="true"/>

                <RadioButton
                    android:id="@+id/rbThrombolysisYes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Yes"/>
            </RadioGroup>
        </LinearLayout>

        <!-- Calculate Button -->
        <Button
            android:id="@+id/btnCalculate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Calculate APACHE IV Score"
            android:layout_marginTop="24dp"/>

        <!-- Results -->
        <LinearLayout
            android:id="@+id/layoutResults"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone"
            android:layout_marginTop="24dp"
            android:background="#CE93D8"
            android:padding="16dp">

            <TextView
                android:id="@+id/tvApacheScore"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="18sp"/>

            <TextView
                android:id="@+id/tvApsScore"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:layout_marginTop="8dp"/>

            <TextView
                android:id="@+id/tvMortality"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:layout_marginTop="8dp"/>

            <TextView
                android:id="@+id/tvLos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:layout_marginTop="8dp"/>
        </LinearLayout>
    </LinearLayout>
</ScrollView>